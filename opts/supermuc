  CXXFLAGS='-DNDEBUG -std=c++11 -fno-alias -g -w -DDUNE_STUFF_FUNCTIONS_DISABLE_CHECKS -funroll-loops -m64 -mfpmath=sse -falign-loops -mtune=native -march=native -pipe -fomit-frame-pointer -O4' \
  --enable-parallel \
  --disable-documentation  INKSCAPE=no"
