  CC=icc \
  CXX=icpc \
  FC=ifort \
  CXXFLAGS='-O3 -DNDEBUG -g3 -gcc-name=gcc-4.8 -gxx-name=g++-4.8 -std=c++0x -w -fopenmp' \
  --enable-parallel \
  --disable-documentation \
  INKSCAPE=no \
"
