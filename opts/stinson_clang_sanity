  CXXFLAGS='-DNDEBUG -g3 -ggdb -std=c++11 -O2 -fsanitize=thread' \
  --enable-parallel \
  --disable-documentation  INKSCAPE=no"
CMAKE_FLAGS=" -Wno-dev -DCMAKE_BUILD_TYPE=RelWithDebInfo CMAKE_Fortran_COMPILER=/bin/false"
MAKE_FLAGS="-j4 -l4"
BUILDDIR=build-clang-sanity
