CONFIGURE_FLAGS="
  CC=icc \
  CXX=icpc \
  F77=ifort \
  CXXFLAGS='-O0 -DDEBUG -g3 -gcc-name=gcc-4.8 -gxx-name=g++-4.8 -std=c++0x -diag-disable 2304 -diag-disable 1418 ' \
  --enable-parallel \
  --disable-documentation \
  INKSCAPE=no \
"
CMAKE_FLAGS=" -Wno-dev -DCMAKE_BUILD_TYPE=DEBUG"
MAKE_FLAGS="-j4 -l4"
BUILDDIR=build-icc-debug

